	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "matthewhalliday",
	"main": ".svelte-kit/cloudflare/_worker.js",
	"compatibility_date": "2025-09-05",
	"compatibility_flags": ["nodejs_als", "nodejs_compat"],
	"assets": {
		"binding": "ASSETS",
