	},
	"observability": {
		"enabled": true
	},
	"routes": [
		{
			"pattern": "matthew.halliday.dev",
			"custom_domain": true
		}
	],
	"d1_databases": [
		{
			"binding": "halliday_db",
			"database_name": "halliday-db",
			"database_id": "0893561c-e38f-42e1-b0dd-78856186cef7"
		}
	],
	"secrets_store_secrets": [
		{
			"binding": "hashed_password",
			"store_id": "5702ed96780e438987aa7fd79d98e692",
			"secret_name": "hashed_password"
		},
		{
			"binding": "salt",
			"store_id": "5702ed96780e438987aa7fd79d98e692",
			"secret_name": "salt"
		}
	]
